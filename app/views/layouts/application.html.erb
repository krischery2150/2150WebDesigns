        @import url('https://fonts.googleapis.com/css?family=Exo|Lobster|Open+Sans+Condensed:300');
      </style>
  </head>

  <body>
      
    <!--Application Header-->
    <%= render "layouts/shared/header" %>
    <%= yield %>
    
    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Theme JavaScript -->
    <script src="https://blackrockdigital.github.io/startbootstrap-new-age/js/new-age.min.js"></script>

    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
